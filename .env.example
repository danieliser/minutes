MLX_MAX_TOKENS=4096

# Claude API (fallback when MLX unavailable)
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-haiku-4-5-20251001

# ── Prompts ────────────────────────────────────────────
# Override system prompt (path to .txt file or inline string)
# SYSTEM_PROMPT=path/to/custom-system-prompt.txt
